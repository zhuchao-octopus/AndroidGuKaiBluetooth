<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen1_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="bottom|right">

    <ImageView
        android:id="@+id/incoming_show"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/com_button11"
        android:focusable="true"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_launcher"
        android:tag="ak_paramter=100,50"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/incoming_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/com_button_back"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/incoming"
                android:layout_width="720dp"
                android:layout_height="70dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="26dp"
                android:singleLine="true"
                android:textAppearance="@style/CommonStyleFonts"
                android:textColor="#ffffff"
                android:textSize="38dp" />

            <TextView
                android:id="@+id/calling_time"
                android:layout_width="304dp"
                android:layout_height="70dp"
                android:gravity="right|center_vertical"
                android:paddingRight="20dp"
                android:singleLine="true"
                android:textAppearance="@style/CommonStyleFonts"
                android:textColor="#ffffff"
                android:textSize="32dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_3call"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/incoming_3call"
                android:layout_width="720dp"
                android:layout_height="70dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="26dp"
                android:singleLine="true"
                android:textAppearance="@style/CommonStyleFonts"
                android:textColor="#ffffff"
                android:textSize="38dp" />

            <TextView
                android:id="@+id/calling_time_3call"
                android:layout_width="304dp"
                android:layout_height="70dp"
                android:gravity="right|center_vertical"
                android:paddingRight="20dp"
                android:singleLine="true"
                android:textAppearance="@style/CommonStyleFonts"
                android:textColor="#ffffff"
                android:textSize="32dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#44000000" />

        <LinearLayout
            android:id="@+id/keyboard_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/calling_num1"
                    style="@style/ButonStyleNumSmall"
                    android:text="@string/digit_1" />

                <TextView
                    android:id="@+id/calling_num2"
                    style="@style/ButonStyleNumSmall"
                    android:text="@string/digit_2" />

                <TextView
                    android:id="@+id/calling_num3"
                    style="@style/ButonStyleNumSmall"
                    android:text="@string/digit_3" />

                <TextView
                    android:id="@+id/calling_num4"
                    style="@style/ButonStyleNumSmall"
                    android:text="@string/digit_4" />

                <TextView
                    android:id="@+id/calling_num5"
                    style="@style/ButonStyleNumSmall"
                    android:text="@string/digit_5" />

                <TextView
                    android:id="@+id/calling_num_xing"
                    style="@style/ButonStyleNumSmall"
                    android:text="@string/digit_x0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/calling_num6"
                    style="@style/ButonStyleNumSmall"
                    android:text="@string/digit_6" />

                <TextView
                    android:id="@+id/calling_num7"
                    style="@style/ButonStyleNumSmall"
                    android:text="@string/digit_7" />

                <TextView
                    android:id="@+id/calling_num8"
                    style="@style/ButonStyleNumSmall"
                    android:text="@string/digit_8" />

                <TextView
                    android:id="@+id/calling_num9"
                    style="@style/ButonStyleNumSmall"
                    android:text="@string/digit_9" />

                <TextView
                    android:id="@+id/calling_num0"
                    style="@style/ButonStyleNumSmall"
                    android:text="@string/digit_0" />

                <TextView
                    android:id="@+id/calling_num_jing"
                    style="@style/ButonStyleNumSmall"
                    android:text="@string/digit_x1" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#44000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:background="#aa000000"
            android:gravity="center">

            <ImageView
                android:id="@+id/keyboard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_click_back2"
                android:focusable="true"
                android:scaleType="center"
                android:src="@drawable/icon_17" />

            <ImageView
                android:id="@+id/answering"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_click_back2"
                android:focusable="true"
                android:scaleType="center"
                android:src="@drawable/incoming_call" />

            <ImageView
                android:id="@+id/reject"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_click_back2"
                android:focusable="true"
                android:scaleType="center"
                android:src="@drawable/incoming_hung" />

            <ImageView
                android:id="@+id/calling_mute"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_click_back2"
                android:focusable="true"
                android:scaleType="center"
                android:src="@drawable/voice"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/calling_3call_switch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_click_back2"
                android:focusable="true"
                android:scaleType="center"
                android:src="@drawable/call3_switch" />

            <ImageView
                android:id="@+id/calling_3call_merge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_click_back2"
                android:focusable="true"
                android:scaleType="center"
                android:src="@drawable/call3_merge" />

            <ImageView
                android:id="@+id/calling_voice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_click_back2"
                android:focusable="true"
                android:scaleType="center"
                android:src="@drawable/voice" />

            <ImageView
                android:id="@+id/incoming_hide"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_click_back2"
                android:focusable="true"
                android:scaleType="center"
                android:src="@drawable/point2" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>