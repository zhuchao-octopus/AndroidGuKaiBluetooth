<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_set"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="top"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="204dp"
            android:layout_height="220dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/setup_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/device_name"
                android:textColor="#ffffffff"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/btname"
                android:layout_width="fill_parent"
                android:layout_height="54dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/setup_textbg"
                android:ellipsize="end"
                android:gravity="center"
                android:inputType="textFilter"
                android:onClick="onSetClick"
                android:singleLine="true"
                android:tag="ak_paramter=96"
                android:textColor="#ffffffff"
                android:textSize="18.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="204dp"
            android:layout_height="220dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/setup_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/pin"
                android:textColor="#ffffffff"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/btpin"
                android:layout_width="fill_parent"
                android:layout_height="54dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/setup_textbg"
                android:gravity="center"
                android:maxLength="4"
                android:numeric="integer"
                android:onClick="onSetClick"
                android:singleLine="true"
                android:tag="ak_paramter=96"
                android:textColor="#ffffffff"
                android:textSize="18.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="204dp"
            android:layout_height="220dp"
            android:layout_marginLeft="48dp"
            android:background="@drawable/setup_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/auto_answer"
                android:textColor="#ffffffff"
                android:textSize="18.0sp" />

            <ImageView
                android:id="@+id/autoanswercheck"
                android:layout_width="102dp"
                android:layout_height="54dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/onoff"
                android:clickable="true"
                android:onClick="onSetClick"
                android:scaleType="center"
                android:tag="ak_paramter=96" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="204dp"
            android:layout_height="220dp"
            android:layout_marginLeft="48dp"
            android:background="@drawable/setup_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/auto_connect"
                android:textColor="#ffffffff"
                android:textSize="18.0sp" />

            <ImageView
                android:id="@+id/autoconnectcheck"
                android:layout_width="102dp"
                android:layout_height="54dp"
                android:layout_marginTop="72dp"
                android:background="@drawable/onoff"
                android:clickable="true"
                android:onClick="onSetClick"
                android:tag="ak_paramter=96" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/t_list"
        style="@style/CommonListViewStyle1"
        android:layout_width="726dp"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="#ff000000"
        android:cacheColorHint="@android:color/transparent"
        android:dividerHeight="2dp"
        android:fadingEdge="none"
        android:focusable="true"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:scrollbars="none" />

</LinearLayout>