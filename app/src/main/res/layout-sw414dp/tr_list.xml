<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="98.0px"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2.0px"
        android:layout_gravity="center"
        android:layout_marginTop="96.0px"
        android:background="@drawable/history_listsplice" />


    <TextView
        android:id="@+id/name"
        android:layout_width="334.0px"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/bt"
        android:layout_marginLeft="20.0px"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|left"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="39.0px" />

    <TextView
        android:id="@+id/number"
        android:layout_width="397.0px"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical|right"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="34.0px" />

    <ImageView
        android:id="@+id/bt"
        android:layout_width="58px"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20.0px"
        android:scaleType="center"
        android:src="@drawable/match_iconphone" />

</RelativeLayout>