<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_phonebook"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="20px"
            android:paddingLeft="0px"
            android:paddingTop="20px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0px"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="829.0px"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/tr_edit"
                        android:layout_width="match_parent"
                        android:layout_height="78px"
                        android:layout_marginLeft="5.0px"
                        android:layout_marginRight="12.0px"
                        android:layout_marginTop="0px"
                        android:background="@drawable/setup_textbg"
                        android:gravity="left|center_vertical"
                        android:hint="@string/search"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:singleLine="true" />

                    <ListView
                        android:id="@+id/list_phonebook"
                        style="@style/CommonListViewStyle1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_below="@+id/tr_edit"
                        android:layout_centerInParent="true"
                        android:cacheColorHint="@android:color/transparent"
                        android:dividerHeight="2px"
                        android:fadingEdge="none"
                        android:focusable="true"
                        android:paddingBottom="2px"
                        android:paddingLeft="0px"
                        android:paddingRight="8px"
                        android:paddingTop="2px"
                        android:scrollbars="none" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="160.0px"
                    android:layout_height="392px"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/btn_bar_bg"
                    android:paddingBottom="5px"
                    android:paddingLeft="5px"
                    android:paddingRight="5px"
                    android:paddingTop="5px"
                    android:layout_marginLeft="10.0px">

                    <ImageView
                        android:id="@+id/phone_search_abc"
                        style="@style/ButonStyleLeftPhonebook"
                        android:background="@drawable/btn2_up"
                        android:src="@drawable/ico_search2" />

                    <ImageView
                        android:id="@+id/phone_search"
                        style="@style/ButonStyleLeftPhonebook"
                        android:background="@drawable/btn2_mid"
                        android:src="@drawable/ico_searchex_ru" />

                    <ImageView
                        android:id="@+id/phone_dial"
                        style="@style/ButonStyleLeftPhonebook"
                        android:background="@drawable/btn2_mid"
                        android:src="@drawable/icon_dial" />

                    <ImageView
                        android:id="@+id/phone_download"
                        style="@style/ButonStyleLeftPhonebook"
                        android:background="@drawable/btn2_down"
                        android:src="@drawable/ico_rfu" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>