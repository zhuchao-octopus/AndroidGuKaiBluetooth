<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tr_a2dp"
    android:layout_width="fill_parent"
    android:layout_height="360dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="230dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingRight="0dp">

        <ImageView
            android:layout_width="212dp"
            android:layout_height="106.0dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/eq_bg" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/song"
                style="@style/shadowTextCommonStyleFonts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#ffffffff"
                android:textSize="36.0dp" />

            <TextView
                android:id="@+id/artist"
                style="@style/shadowTextCommonStyleFonts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#ffffffff"
                android:textSize="36.0dp" />

            <TextView
                android:id="@+id/album"
                style="@style/shadowTextCommonStyleFonts"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#ffffffff"
                android:textSize="36.0dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/prev"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:onClick="onClick"
            android:padding="25dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_prev"
            android:tag="ak_paramter=100,50" />

        <ImageView
            android:id="@id/pp"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:padding="20dp"
            android:layout_marginLeft="48.0dip"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_play"
            android:tag="ak_paramter=100,50" />

        <ImageView
            android:id="@id/next"
            android:layout_width="120dp"
            android:padding="25dp"
            android:layout_height="80dp"
            android:layout_marginLeft="48.0dip"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_next"
            android:tag="ak_paramter=100,50" />
    </LinearLayout>

</LinearLayout>