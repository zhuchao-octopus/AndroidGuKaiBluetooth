<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tr_dial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="40px"
    android:paddingRight="120px"
    android:paddingTop="20px">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="96px"
        android:layout_marginLeft="49px"
        android:background="@drawable/input_bg"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="690px"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/digit"
                    android:layout_width="570px"
                    android:layout_height="match_parent"
                    android:ellipsize="start"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/dial_status"
                    android:layout_width="120px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="#ffe0e0e0"
                    android:textSize="22px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_3call"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/digit_3call"
                    android:layout_width="570px"
                    android:layout_height="match_parent"
                    android:ellipsize="start"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/dial_status_3call"
                    android:layout_width="120px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="#ffe0e0e0"
                    android:textSize="22px" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/delete"
            android:layout_width="62.0px"
            android:layout_height="34px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50px"
            android:tag="ak_paramter=100,50"
            android:background="@drawable/delete_nor"
            android:onClick="onClick" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/n1"
                android:layout_marginLeft="51px"
                style="@style/ButtonStyleDialNumNo3Call"
                android:src="@drawable/b_1" />

            <ImageButton
                android:id="@+id/n2"
                style="@style/ButtonStyleDialNumNo3Call"
                android:src="@drawable/b_2" />

            <ImageButton
                android:id="@+id/n3"
                style="@style/ButtonStyleDialNumNo3Call"
                android:src="@drawable/b_3" />

            <ImageButton
                android:id="@+id/nx"
                style="@style/ButtonStyleDialNumNo3Call"
                android:src="@drawable/b_s" />


            <ImageButton
                android:id="@+id/dial_voiceswitch"
                style="@style/ButtonStyleDialNumNo3Call"
                android:onClick="onDialclick"
                android:src="@drawable/ico_btpswitch" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/n4"
                android:layout_marginLeft="51px"
                style="@style/ButtonStyleDialNumNo3Call"
                android:src="@drawable/b_4" />

            <ImageButton
                android:id="@+id/n5"
                style="@style/ButtonStyleDialNumNo3Call"
                android:src="@drawable/b_5" />

            <ImageButton
                android:id="@+id/n6"
                style="@style/ButtonStyleDialNumNo3Call"
                android:src="@drawable/b_6" />

            <ImageButton
                android:id="@+id/n0"
                style="@style/ButtonStyleDialNumNo3Call"
                android:src="@drawable/b_0" />

            <ImageButton
                android:id="@+id/dial_dialout"
                style="@style/ButtonStyleDialNumNo3Call"
                android:onClick="onDialclick"
                android:src="@drawable/ico_dailout" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/n7"
                style="@style/ButtonStyleDialNumNo3Call"
                android:layout_marginLeft="51px"
                android:src="@drawable/b_7" />

            <ImageButton
                android:id="@+id/n8"
                style="@style/ButtonStyleDialNumNo3Call"
                android:src="@drawable/b_8" />

            <ImageButton
                android:id="@+id/n9"
                style="@style/ButtonStyleDialNumNo3Call"
                android:src="@drawable/b_9" />

            <ImageButton
                android:id="@+id/nj"
                style="@style/ButtonStyleDialNumNo3Call"
                android:src="@drawable/b_h" />

            <ImageButton
                android:id="@+id/dial_handup"
                style="@style/ButtonStyleDialNumNo3Call"
                android:onClick="onDialclick"
                android:src="@drawable/ico_handup" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>