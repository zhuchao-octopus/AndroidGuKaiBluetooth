    <LinearLayout
        android:id="@+id/page_main"
        android:layout_width="700px"
        android:layout_height="360px"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dip"
            android:background="@drawable/tl_l_bg_pressed"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/speech_title"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingExtra="15dp"
                android:text="@string/help"
                android:textColor="#ffffff"
                android:textSize="28sp" />

            <ImageView
                android:id="@+id/back"
                android:layout_width="120px"
                android:layout_height="70px"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_click_back4"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/icon_20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="300px"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rotation="0.50"
                    android:src="@drawable/mic" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="400px"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/map_help"
                    android:layout_width="500dip"
                    android:layout_height="200px"
                    android:layout_marginLeft="0dip"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dip"
                        android:layout_marginTop="0dip"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="100px"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_vertical"
                            android:lineSpacingExtra="15dp"
                            android:text="@string/help3"
                            android:textColor="#ffffff"
                            android:textSize="34sp" />

                        <!-- <TextView -->
                        <!-- android:layout_width="match_parent" -->
                        <!-- android:layout_height="wrap_content" -->
                        <!-- android:layout_gravity="center_horizontal" -->
                        <!-- android:lineSpacingExtra="15dp" -->
                        <!-- android:text="@string/help5" -->
                        <!-- android:textColor="#ffffff" -->
                        <!-- android:textSize="32sp" /> -->

                        <TextView
                            android:id="@+id/voice_textview_dail"
                            android:layout_width="match_parent"
                            android:layout_height="100px"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_vertical"
                            android:lineSpacingExtra="15dp"
                            android:text="@string/help2"
                            android:textColor="#ffffff"
                            android:textSize="34sp" />

                        <!-- <TextView -->
                        <!-- android:layout_width="match_parent" -->
                        <!-- android:layout_height="wrap_content" -->
                        <!-- android:layout_gravity="center_horizontal" -->
                        <!-- android:lineSpacingExtra="15dp" -->
                        <!-- android:text="@string/help4" -->
                        <!-- android:textColor="#ffffff" -->
                        <!-- android:textSize="32sp" /> -->
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_sr_result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="32sp"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/t_list"
                style="@style/CommonListViewStyle1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0px"
                android:cacheColorHint="@android:color/transparent"
                android:dividerHeight="2px"
                android:fadingEdge="none"
                android:focusable="true"
                android:paddingBottom="4px"
                android:paddingTop="4px"
                android:scrollbars="none" />
        </LinearLayout>
    </LinearLayout>

