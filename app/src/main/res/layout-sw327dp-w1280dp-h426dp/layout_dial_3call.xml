<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tr_dial"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:background="#162632"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/digit"
                android:layout_width="669.0dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="30.0sp" />

            <TextView
                android:id="@+id/dial_status"
                android:layout_width="165.0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="3.0dip"
                android:gravity="center"
                android:textColor="#ffe0e0e0"
                android:textSize="24.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_3call"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/digit_3call"
                android:layout_width="669.0dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="30.0sp" />

            <TextView
                android:id="@+id/dial_status_3call"
                android:layout_width="165.0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="3.0dip"
                android:gravity="center"
                android:textColor="#ffe0e0e0"
                android:textSize="24.0sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#0c151d"
        android:orientation="horizontal"
        android:paddingLeft="100dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/n1"
                    android:layout_width="164dp"
                    android:layout_height="66dp"
                    android:background="@drawable/rec_btn"
                    android:clickable="true"
                    android:onClick="onDClick"
                    android:src="@drawable/b_1" />

                <ImageButton
                    android:id="@+id/n2"
                    android:layout_width="164dp"
                    android:layout_height="66dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/rec_btn"
                    android:onClick="onDClick"
                    android:src="@drawable/b_2" />

                <ImageButton
                    android:id="@+id/n3"
                    android:layout_width="164dp"
                    android:layout_height="66dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/rec_btn"
                    android:onClick="onDClick"
                    android:src="@drawable/b_3" />

                <ImageView
                    android:id="@+id/call3_add"
                    android:layout_width="164dp"
                    android:layout_height="66dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/rec_btn"
                    android:onClick="onDialclick"
                    android:scaleType="center"
                    android:src="@drawable/call3_add" />

                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="164dp"
                    android:layout_height="66dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/rec_btn"
                    android:onClick="onClick"
                    android:src="@drawable/delete_nor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/n4"
                            android:layout_width="164dp"
                            android:layout_height="66dp"
                            android:background="@drawable/rec_btn"
                            android:onClick="onDClick"
                            android:src="@drawable/b_4" />

                        <ImageButton
                            android:id="@+id/n5"
                            android:layout_width="164dp"
                            android:layout_height="66dp"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/rec_btn"
                            android:onClick="onDClick"
                            android:src="@drawable/b_5" />

                        <ImageButton
                            android:id="@+id/n6"
                            android:layout_width="164dp"
                            android:layout_height="66dp"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/rec_btn"
                            android:onClick="onDClick"
                            android:src="@drawable/b_6" />

                        <ImageButton
                            android:id="@+id/call3_swtich"
                            android:layout_width="164dp"
                            android:layout_height="66dp"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/rec_btn"
                            android:onClick="onDialclick"
                            android:src="@drawable/call3_switch" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/n7"
                            android:layout_width="164dp"
                            android:layout_height="66dp"
                            android:background="@drawable/rec_btn"
                            android:onClick="onDClick"
                            android:src="@drawable/b_7" />

                        <ImageButton
                            android:id="@+id/n8"
                            android:layout_width="164dp"
                            android:layout_height="66dp"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/rec_btn"
                            android:onClick="onDClick"
                            android:src="@drawable/b_8" />

                        <ImageButton
                            android:id="@+id/n9"
                            android:layout_width="164dp"
                            android:layout_height="66dp"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/rec_btn"
                            android:onClick="onDClick"
                            android:src="@drawable/b_9" />

                        <ImageButton
                            android:id="@+id/call3_merge"
                            android:layout_width="164dp"
                            android:layout_height="66dp"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/rec_btn"
                            android:onClick="onDialclick"
                            android:src="@drawable/call3_merge" />
                    </LinearLayout>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/dial_dialout"
                    android:layout_width="164dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rec_btn_dial"
                    android:onClick="onDialclick"
                    android:src="@drawable/ico_dailout" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/nx"
                    android:layout_width="164dp"
                    android:layout_height="66dp"
                    android:background="@drawable/rec_btn"
                    android:onClick="onDClick"
                    android:src="@drawable/b_s" />

                <ImageButton
                    android:id="@+id/n0"
                    android:layout_width="164dp"
                    android:layout_height="66dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/rec_btn"
                    android:onClick="onDClick"
                    android:src="@drawable/b_0" />

                <ImageButton
                    android:id="@+id/nj"
                    android:layout_width="164dp"
                    android:layout_height="66dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/rec_btn"
                    android:onClick="onDClick"
                    android:src="@drawable/b_h" />

                <ImageButton
                    android:id="@+id/dial_voiceswitch"
                    android:layout_width="164dp"
                    android:layout_height="66dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/rec_btn"
                    android:onClick="onDialclick"
                    android:scaleType="center"
                    android:src="@drawable/ico_btpswitch" />

                <ImageButton
                    android:id="@+id/dial_handup"
                    android:layout_width="164dp"
                    android:layout_height="66dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/rec_btn_hang"
                    android:onClick="onDialclick"
                    android:src="@drawable/ico_handup" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>