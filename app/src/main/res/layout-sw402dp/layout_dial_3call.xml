<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tr_dial"
    android:layout_width="fill_parent"
    android:layout_height="360px"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="648px"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/n1"
                    android:layout_width="99px"
                    android:layout_height="76px"
                    android:background="@null"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    android:onClick="onDClick"
                    android:src="@drawable/b_1"
                    android:tag="ak_paramter=100,50" />

                <ImageButton
                    android:id="@+id/n2"
                    android:layout_width="99px"
                    android:layout_height="76px"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="18px"
                    android:background="@null"
                    android:onClick="onDClick"
                    android:src="@drawable/b_2"
                    android:tag="ak_paramter=100,50" />

                <ImageButton
                    android:id="@+id/n3"
                    android:layout_width="99px"
                    android:scaleType="fitCenter"
                    android:layout_height="76px"
                    android:layout_marginLeft="18px"
                    android:background="@null"
                    android:onClick="onDClick"
                    android:src="@drawable/b_3"
                    android:tag="ak_paramter=100,50" />

                <ImageButton
                    android:id="@+id/nj"
                    android:layout_width="99px"
                    android:scaleType="fitCenter"
                    android:layout_height="76px"
                    android:layout_marginLeft="18px"
                    android:background="@null"
                    android:onClick="onDClick"
                    android:src="@drawable/b_h"
                    android:tag="ak_paramter=100,50" />

                <ImageButton
                    android:id="@+id/call3_add"
                    android:layout_width="99px"
                    android:layout_height="76px"
                    android:layout_marginLeft="18px"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:onClick="onDialclick"
                    android:src="@drawable/call3_add"
                    android:tag="ak_paramter=100,50" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/n4"
                    android:layout_width="99px"
                    android:layout_height="76px"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:onClick="onDClick"
                    android:src="@drawable/b_4"
                    android:tag="ak_paramter=100,50" />

                <ImageButton
                    android:id="@+id/n5"
                    android:layout_width="99px"
                    android:layout_height="76px"
                    android:layout_marginLeft="18px"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:onClick="onDClick"
                    android:src="@drawable/b_5"
                    android:tag="ak_paramter=100,50" />

                <ImageButton
                    android:id="@+id/n6"
                    android:layout_width="99px"
                    android:layout_height="76px"
                    android:layout_marginLeft="18px"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:onClick="onDClick"
                    android:src="@drawable/b_6"
                    android:tag="ak_paramter=100,50" />

                <ImageButton
                    android:id="@+id/nx"
                    android:layout_width="99px"
                    android:layout_height="76px"
                    android:layout_marginLeft="18px"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:onClick="onDClick"
                    android:src="@drawable/b_s"
                    android:tag="ak_paramter=100,50" />

                <ImageButton
                    android:id="@+id/call3_swtich"
                    android:layout_width="99px"
                    android:layout_height="76px"
                    android:layout_marginLeft="18px"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:onClick="onDialclick"
                    android:src="@drawable/call3_switch2"
                    android:tag="ak_paramter=100,50" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/n7"
                    android:layout_width="99px"
                    android:layout_height="76px"
                    android:background="@null"
                    android:onClick="onDClick"
                    android:scaleType="fitCenter"
                    android:src="@drawable/b_7"
                    android:tag="ak_paramter=100,50" />

                <ImageButton
                    android:id="@+id/n8"
                    android:layout_width="99px"
                    android:layout_height="76px"
                    android:layout_marginLeft="18px"
                    android:background="@null"
                    android:onClick="onDClick"
                    android:scaleType="fitCenter"
                    android:src="@drawable/b_8"
                    android:tag="ak_paramter=100,50" />

                <ImageButton
                    android:id="@+id/n9"
                    android:layout_width="99px"
                    android:layout_height="76px"
                    android:layout_marginLeft="18px"
                    android:background="@null"
                    android:onClick="onDClick"
                    android:scaleType="fitCenter"
                    android:src="@drawable/b_9"
                    android:tag="ak_paramter=100,50" />

                <ImageButton
                    android:id="@+id/n0"
                    android:layout_width="99px"
                    android:layout_height="76px"
                    android:layout_marginLeft="18px"
                    android:background="@null"
                    android:onClick="onDClick"
                    android:scaleType="fitCenter"
                    android:src="@drawable/b_0"
                    android:tag="ak_paramter=100,50" />

                <ImageButton
                    android:id="@+id/call3_merge"
                    android:layout_width="99px"
                    android:layout_height="76px"
                    android:layout_marginLeft="18px"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:onClick="onDialclick"
                    android:src="@drawable/call3_merge2"
                    android:tag="ak_paramter=100,50" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="40px"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingRight="40px">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="64px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="0.0px"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="20px">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/text_connect"
                    android:textColor="@android:color/white"
                    android:textSize="20.0px" />

                <TextView
                    android:id="@+id/tv_con_phonename"
                    android:layout_width="fill_parent"
                    android:layout_height="0px"
                    android:layout_weight="1.2"
                    android:ellipsize="marquee"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="24.0px" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="76px"
            android:layout_marginTop="12px"
            android:background="@drawable/dial_num_back">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingRight="99px">

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.zhuchao.android.bt.view.MarqueeTextView
                        android:id="@+id/digit"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1.8"
                        android:ellipsize="start"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textSize="26.0px" />

                    <TextView
                        android:id="@+id/dial_status"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textSize="15.0px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_3call"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.zhuchao.android.bt.view.MarqueeTextView
                        android:id="@+id/digit_3call"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1.8"
                        android:ellipsize="start"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textSize="26.0px" />

                    <TextView
                        android:id="@+id/dial_status_3call"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textSize="15.0px" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/delete"
                android:layout_width="66px"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:onClick="onClick"
                android:scaleType="center"
                android:src="@drawable/dial_back"
                android:tag="ak_paramter=100,50" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12px"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/dial_dialout"
                android:layout_width="99px"
                android:layout_height="70px"
                android:layout_marginLeft="20px"
                android:background="@null"
                android:scaleType="fitCenter"
                android:onClick="onDialclick"
                android:src="@drawable/ico_dailout"
                android:tag="ak_paramter=100,50" />

            <ImageButton
                android:id="@+id/dial_handup"
                android:layout_width="99px"
                android:layout_height="70px"
                android:layout_marginLeft="108px"
                android:scaleType="fitCenter"
                android:background="@null"
                android:onClick="onDialclick"
                android:src="@drawable/ico_handup"
                android:tag="ak_paramter=100,50" />

            <ImageButton
                android:id="@+id/dial_voiceswitch"
                android:layout_width="99px"
                android:layout_height="70px"
                android:scaleType="fitCenter"
                android:layout_marginLeft="108px"
                android:background="@null"
                android:onClick="onDialclick"
                android:src="@drawable/ico_btpswitch"
                android:tag="ak_paramter=100,50" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>