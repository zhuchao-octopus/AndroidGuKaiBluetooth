<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="552.0px"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bt_background">

        <ImageView
            android:layout_width="270px"
            android:layout_height="552.0px"
            android:background="@drawable/bt_background2"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:id="@+id/btconnected_layout"
            android:layout_width="750.0px"
            android:layout_height="100.0px"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="202.0px"
                android:layout_height="fill_parent"
                android:layout_marginLeft="27.0px"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="@string/text_connect"
                    android:textSize="26.0px" />

                <TextView
                    android:id="@+id/tv_con_phonename"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_horizontal"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="#ff1f459d"
                    android:textSize="26.0px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="218.0px"
                android:layout_height="fill_parent"
                android:layout_marginLeft="41.0px"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="@string/device_name"
                    android:textSize="26.0px" />

                <TextView
                    android:id="@+id/tv_con_devicename"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_horizontal"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="#ff1f459d"
                    android:textSize="26.0px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="202.0px"
                android:layout_height="fill_parent"
                android:layout_marginLeft="39.0px"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="@string/pin"
                    android:textSize="26.0px" />

                <TextView
                    android:id="@+id/tv_con_pincode"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_horizontal"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="#ff1f459d"
                    android:textSize="26.0px" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"

            android:layout_height="540.0px"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/main_page_no_dial"
                android:layout_width="fill_parent"
                android:layout_height="400.0px"
                android:layout_marginTop="5px"
                android:layout_marginLeft="300.0px"
                android:layout_marginRight="10.0px"
                android:gravity="center">


                <!-- <ListView -->
                <!-- android:id="@+id/t_list" -->
                <!-- style="@style/CommonListViewStyle1" -->
                <!-- android:layout_width="726px" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:layout_centerHorizontal="true" -->
                <!-- android:layout_marginTop="0px" -->
                <!-- android:background="#00000000" -->
                <!-- android:cacheColorHint="@android:color/transparent" -->
                <!-- android:dividerHeight="2px" -->
                <!-- android:fadingEdge="none" -->
                <!-- android:focusable="true" -->
                <!-- android:paddingBottom="4px" -->
                <!-- android:paddingTop="4px" -->
                <!-- android:scrollbars="none" -->
                <!-- android:visibility="gone" /> -->

                <LinearLayout
                    android:id="@+id/t_normal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0px"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="100.0px"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/tl_0"
                            style="@style/ButonStyleLeft" />

                        <View
                            android:layout_width="0.0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0" />

                        <ImageView
                            android:id="@+id/tl_1"
                            style="@style/ButonStyleLeft" />

                        <View
                            android:layout_width="0.0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0" />

                        <ImageView
                            android:id="@+id/tl_2"
                            style="@style/ButonStyleLeft" />

                        <View
                            android:layout_width="0.0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0" />

                        <ImageView
                            android:id="@+id/tl_3"
                            style="@style/ButonStyleLeft" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="4.0px"
                        android:layout_marginRight="1.0px"
                        android:layout_weight="1"
                        android:gravity="center">

                        <RelativeLayout
                            android:id="@+id/tr_list_bg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_horizontal"
                            android:visibility="visible">

                            <EditText
                                android:id="@+id/tr_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="0px"
                                android:paddingLeft="20px"
                                android:layout_marginRight="60px"
                                android:layout_marginTop="0px"
                                android:gravity="center"
                                android:imeOptions="actionDone"
                                android:inputType="text"
                                android:singleLine="true"
                                android:visibility="gone" />

                            <ListView
                                android:id="@+id/tr_list"
                                style="@style/CommonListViewStyle1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignWithParentIfMissing="true"
                                android:layout_below="@+id/tr_edit"
                                android:layout_centerInParent="true"
                                android:cacheColorHint="@android:color/transparent"
                                android:childDivider="#30ffffff"
                                android:divider="#30ffffff"
                                android:dividerHeight="1.0px"
                                android:fadingEdge="none"
                                android:focusable="true"
                                android:listSelector="@drawable/list_selector"
                                android:paddingBottom="2.0px"
                                android:paddingLeft="18.0px"
                                android:paddingRight="66.0px"
                                android:paddingTop="2.0px"
                                android:scrollbarStyle="outsideOverlay"
                                android:scrollbars="none"
                                android:scrollingCache="false" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right">

                                <include
                                    layout="@layout/abcdefg"
                                    android:visibility="visible" />
                            </RelativeLayout>

                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <include
            layout="@layout/layout_a2dp"
            android:visibility="gone" />

        <include
            android:layout_width="fill_parent"
            android:layout_height="420.0px"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0.0px"
            android:layout_marginRight="0.0px"
            layout="@layout/layout_dial_3call"
            android:visibility="gone" />

        <include
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btconnected_layout"
            android:layout_marginLeft="260.0px"
            android:layout_marginRight="84.0px"
            layout="@layout/layout_set"
            android:visibility="gone" />

        <include
            layout="@layout/layout_pair"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="752.0px"
            android:layout_height="140.0px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom|center|right"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingRight="10.0px">

            <LinearLayout
                android:layout_width="fill_parent"
                android:id="@+id/disconnect_hide_info"
                android:layout_height="fill_parent"
                android:visibility="gone"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/calllog"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/bt_bottom_btn_selected"
                    android:clickable="true"
                    android:onClick="onBClick"
                    android:scaleType="fitXY"
                    android:tag="ak_paramter=100,50"
                    android:src="@drawable/ico_histroy_nor" />

                <ImageView
                    android:id="@+id/phonebook"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/bt_bottom_btn_selected"
                    android:clickable="true"
                    android:onClick="onBClick"
                    android:tag="ak_paramter=100,50"
                    android:scaleType="fitXY"
                    android:src="@drawable/ico_book_nor" />

                <ImageView
                    android:id="@+id/dial"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="#ffff0000"
                    android:clickable="true"
                    android:onClick="onBClick"
                    android:scaleType="fitXY"
                    android:tag="ak_paramter=100,50"
                    android:src="@drawable/ico_dial_nor" />

                <ImageView
                    android:id="@+id/a2dp"
                    android:layout_width="0.0dip"
                    android:layout_height="75.0px"
                    android:layout_weight="1.0"
                    android:background="@drawable/bt_bottom_btn_selected"
                    android:clickable="true"
                    android:onClick="onBClick"
                    android:scaleType="fitXY"
                    android:tag="ak_paramter=100,50"
                    android:src="@drawable/bt_page_a2dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/pair"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/bt_bottom_btn_selected"
                    android:clickable="true"
                    android:onClick="onBClick"
                    android:tag="ak_paramter=100,50"
                    android:scaleType="fitXY"
                    android:src="@drawable/ico_search_pre" />

                <ImageView
                    android:id="@+id/setting"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/bt_bottom_btn_selected"
                    android:clickable="true"
                    android:onClick="onBClick"
                    android:tag="ak_paramter=100,50"
                    android:scaleType="fitXY"
                    android:src="@drawable/ico_set_nor" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/device_info_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom|center|right"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="286.0px"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="27.0px"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/device_name"
                        android:textSize="26.0px" />

                    <TextView
                        android:id="@+id/tv_devicename"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_horizontal"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textSize="26.0px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="286.0px"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="124.0px"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/pin"
                        android:textSize="26.0px" />

                    <TextView
                        android:id="@+id/tv_pincode"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_horizontal"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textSize="26.0px" />
                </LinearLayout>
            </LinearLayout>

            <com.zhuchao.android.bt.view.MarqueeTextView
                android:id="@+id/disconnect_info"
                style="@style/shadowTextCommonStyleFonts"
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="24px"
                android:visibility="gone" />

        </FrameLayout>

        <TextView
            android:id="@+id/downloading"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#cc000000"
            android:clickable="true"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="36px"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>