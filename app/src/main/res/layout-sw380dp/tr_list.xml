<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="62px"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/button_click_back1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_gravity="center"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_marginTop="60px"
        android:background="@drawable/history_listsplice" />

    <TextView
        android:id="@+id/name"
        android:layout_width="320px"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50px"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="#ebebeb"
        android:textSize="28px" />

    <TextView
        android:id="@+id/number"
        android:layout_width="267px"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="360px"
        android:layout_marginRight="10px"
        android:gravity="center_vertical|left"
        android:singleLine="true"
        android:textColor="#ebebeb"
        android:textSize="28px" />

    <ImageView
        android:id="@+id/bt"
        android:layout_width="38px"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5.0px"
        android:scaleType="center"
        android:src="@drawable/match_iconphone" />

</RelativeLayout>