<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="86px"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/button_click_back1">

    <ImageView
        android:id="@+id/phone_book_list_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="center"
        android:layout_marginLeft="0.0dip"
        android:layout_marginRight="0.0dip"
        android:layout_marginTop="85.0px"
        android:background="#88888888" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/abc_tag"
            android:layout_width="51.0px"
            android:gravity="center"
            android:layout_height="51.0px"
            android:background="@drawable/letterbg" />

        <TextView
            android:id="@+id/name"
            android:layout_width="370.0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="7px"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="32.0px" />

        <TextView
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22.0px"
            android:layout_marginRight="12.0px"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="32.0px" />
    </LinearLayout>

</RelativeLayout>