<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tr_dial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="40dp"
    android:paddingRight="120dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="49dp"
        android:background="@drawable/input_bg"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="830dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/digit"
                    android:layout_width="720dp"
                    android:layout_height="match_parent"
                    android:ellipsize="start"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/dial_status"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="#ffe0e0e0"
                    android:textSize="24dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_3call"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/digit_3call"
                    android:layout_width="720dp"
                    android:layout_height="match_parent"
                    android:ellipsize="start"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/dial_status_3call"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="#ffe0e0e0"
                    android:textSize="24dp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/delete"
            android:layout_width="74.0dp"
            android:layout_height="41dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="70dp"
            android:tag="ak_paramter=100,50"
            android:background="@drawable/delete_nor"
            android:onClick="onClick" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/n1"
                style="@style/ButtonStyleDialNum"
                android:src="@drawable/b_1" />

            <ImageButton
                android:id="@+id/n2"
                style="@style/ButtonStyleDialNum"
                android:src="@drawable/b_2" />

            <ImageButton
                android:id="@+id/n3"
                style="@style/ButtonStyleDialNum"
                android:src="@drawable/b_3" />

            <ImageButton
                android:id="@+id/nx"
                style="@style/ButtonStyleDialNum"
                android:src="@drawable/b_s" />

            <ImageButton
                android:id="@+id/call3_add"
                style="@style/ButtonStyleDialNum"
                android:onClick="onDialclick"
                android:src="@drawable/call3_add" />

            <ImageButton
                android:id="@+id/dial_voiceswitch"
                style="@style/ButtonStyleDialNum"
                android:onClick="onDialclick"
                android:src="@drawable/ico_btpswitch" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/n4"
                style="@style/ButtonStyleDialNum"
                android:src="@drawable/b_4" />

            <ImageButton
                android:id="@+id/n5"
                style="@style/ButtonStyleDialNum"
                android:src="@drawable/b_5" />

            <ImageButton
                android:id="@+id/n6"
                style="@style/ButtonStyleDialNum"
                android:src="@drawable/b_6" />

            <ImageButton
                android:id="@+id/n0"
                style="@style/ButtonStyleDialNum"
                android:src="@drawable/b_0" />

            <ImageButton
                android:id="@+id/call3_swtich"
                style="@style/ButtonStyleDialNum"
                android:onClick="onDialclick"
                android:src="@drawable/call3_switch" />

            <ImageButton
                android:id="@+id/dial_dialout"
                style="@style/ButtonStyleDialNum"
                android:onClick="onDialclick"
                android:src="@drawable/ico_dailout" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/n7"
                style="@style/ButtonStyleDialNum"
                android:src="@drawable/b_7" />

            <ImageButton
                android:id="@+id/n8"
                style="@style/ButtonStyleDialNum"
                android:src="@drawable/b_8" />

            <ImageButton
                android:id="@+id/n9"
                style="@style/ButtonStyleDialNum"
                android:src="@drawable/b_9" />

            <ImageButton
                android:id="@+id/nj"
                style="@style/ButtonStyleDialNum"
                android:src="@drawable/b_h" />

            <ImageButton
                android:id="@+id/call3_merge"
                style="@style/ButtonStyleDialNum"
                android:onClick="onDialclick"
                android:src="@drawable/call3_merge" />

            <ImageButton
                android:id="@+id/dial_handup"
                style="@style/ButtonStyleDialNum"
                android:onClick="onDialclick"
                android:src="@drawable/ico_handup" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>